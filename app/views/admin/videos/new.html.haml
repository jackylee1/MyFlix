%section.admin_add_video
  .container
    .row
      .span10.offset1
        = form_for [:admin, @video] do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %fieldset
            = f.label :title, "Title", class: "control-group"
            = f.text_field :title, class: "controls"
            = f.label :category
            / .control-group
            /   %label.control-label Category
            /   .controls
            /     %select
            = f.label :description
            = f.text_area :description
            / .control-group
            /   %label.control-label Description
            /   .controls
            /     %textarea.span6(rows="8")
            = f.label :large_cover_url, "Large Cover Photo"
            = f.file_field :large_cover_url
            / .control-group
            /   %label.control-label Large Cover
            /   .controls
            /     %span.btn.btn-file
            /       %input(type="file")
            / .control-group
            /   %label.control-label Small Cover
            /   .controls
            /     %span.btn.btn-file
            /       %input(type="file")

          %fieldset.actions.control-group
            = f.submit "Submit", class: "btn"

